import javax.swing.*;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {


        Scanner scanner = new Scanner(System.in);
        int n = scanner.nextInt();
        int max=Integer.MIN_VALUE;
        int sum=0;
        for (int i = 0; i <n; i++) {
           int numbers = scanner.nextInt();
           sum+=numbers;

           if (max<numbers){
               max=numbers;
           }
        }
        int sumMAXNumberNo= sum-max;
        if (sumMAXNumberNo==max){
            System.out.printf("Yes!\nSum is:%d",max);
        } else {
            int diff= Math.abs(sumMAXNumberNo-max);
            System.out.printf("No\nDiff is:%d",diff);

        }




    }
}
