Scanner scanner = new Scanner(System.in);
int counter = 0;
int n = Integer.parseInt(scanner.nextLine());
for (int i = 0; i <= n; i++) {  
    for (int j = 0; j <= n; j++) {
        for (int k = 0; k <= n; k++) {
            int result = i+j+k;
            if (result == n){
                counter++;
                System.out.printf("\n%d + %d + %d = %d",i,j,k,result);
            }
        }
    }
}
System.out.printf("\n%d",counter);
