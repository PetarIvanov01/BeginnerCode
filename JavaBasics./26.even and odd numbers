import javax.swing.*;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {


        Scanner scanner = new Scanner(System.in);

        int n = scanner.nextInt();

        int oddNumb=0;
        int evenNumb=0;
        for (int i = 0; i <n ; i++) {
            int element = scanner.nextInt();
            if (i % 2==0){
                evenNumb+=element;
            } else {
                oddNumb+=element;
            }
        }
        if (evenNumb==oddNumb){
            System.out.printf("Yes\nSum = %d",evenNumb);
        } else {
            System.out.printf("No\nDiff = %d",Math.abs(evenNumb-oddNumb));

        }

     }
}
