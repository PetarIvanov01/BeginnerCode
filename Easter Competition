import java.util.Scanner;

public class Main {
    public static void main(String[] args) {


        Scanner scanner = new Scanner(System.in);

        int tastedBread = Integer.parseInt(scanner.nextLine());
        int maxPoints = Integer.MIN_VALUE;
        String winner = "";
        for (int i = 0; i < tastedBread; i++) {
            String name = scanner.nextLine();

            String input = scanner.nextLine();
            int sumPoints = 0;
            while (!input.equals("Stop")){
                int points = Integer.parseInt(input);

                sumPoints+=points;

                input = scanner.nextLine();
            }
            System.out.printf("%s has %d points.\n",name,sumPoints);

            if (maxPoints<sumPoints){
                maxPoints=sumPoints;
                winner = name;
                System.out.printf("%s is the new number 1!\n",name);
            }


        }

        System.out.printf("%s won competition with %d points!\n",winner,maxPoints);
    }
}
